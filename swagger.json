{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Url shortner",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
        {
            "name": "Shortened Urls"
        }
    ],
    "paths": {
        "/search": {
            "get": {
                "tags": [
                    "Search all shortened urls"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "url",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "slug",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "limit",
                        "required": false,
                        "type": "number"
                    },
                    {
                        "in": "query",
                        "name": "offset",
                        "required": false,
                        "type": "number"
                    },
                    {
                        "in": "query",
                        "name": "sortBy",
                        "required": false,
                        "type": "string",
                        "enum": [
                            "slug",
                            "url",
                            "updatedAt",
                            "createdAt"
                        ]
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/{slug}": {
            "get": {
                "tags": [
                    "Get and be redirected to url"
                ],
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "type": "string"
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Unable to redirect from within swagger"
                    }
                }
            }
        },
        "/": {
            "post": {
                "tags": [
                    "Shorten url with or without slug"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "type": "object",
                        "properties": {
                            "url": {
                                "type": "string",
                                "required": true
                            },
                            "slug": {
                                "type": "string",
                                "required": false
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Delete shortened url by slug"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "type": "object",
                        "properties": {
                            "slug": {
                                "type": "string",
                                "required": true
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted"
                    }
                }
            }
        },
        "/info/{slug}": {
            "get": {
                "tags": [
                    "Get shortened url info by slug"
                ],
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "type": "string"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        }
    },
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ]
}